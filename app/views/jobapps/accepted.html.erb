<div class="container-job-index">
    <h1>All Accepted Applicants</h1>
    <p>All applicants who have been accepted should appear here</p>
    <div class="flex">
        <%= link_to "All", applicant_path(current_user) %>
        <p> | </p>
        <%= link_to "Accepted", accepted_path(current_user) %>
        <p> | </p>
        <%= link_to "Declined", declined_path(current_user) %>
        <p> | </p>
        <%= link_to "Completed", completed_path(current_user) %>
    </div>
    <% @acceptedjobs.each do |accepted| %>
    <div class="applicant-card">

        <div class="applicant-info">
        <div class="flex">
            <% if accepted.user.photo.attached? %>
                <%= cl_image_tag accepted.user.photo.key, class: "applicant-image-small" %>
            <% end %>
            <div>
                <h3 class="job-card-title"><%= accepted.user.fname %> <%= accepted.user.lname %></h3>
                <p class="job-card-description">Applying for: <%= accepted.job.job_title %></p>
                <div class="location-icon-width">
                    <i class="fas fa-map-pin icon"><span class="icon-text"><%= accepted.user.user_address %></span></i>
                </div>
                <p class="">"<%= accepted.message %>"</p>
                
            </div>
        </div>
            <div class="flex accept-decline">
                    <%= link_to "Completed", complete_jobapp_path(accepted), class: "button-card-applicant" %>
                </div>
        </div>
    </div>
    <% end %>
</div>